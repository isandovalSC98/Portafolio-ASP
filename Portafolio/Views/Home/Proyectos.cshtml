@model IEnumerable<DTO>
@{
    ViewData["Title"] = "Proyectos";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @{
            if (Model is not null)
            {
                foreach (var proyectos in Model)
                {
                    <div class="card h-100">
                        <img src="~/imagenes/usuario.png" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@proyectos.Titulo</h5>
                            <p class="card-text">@proyectos.Descripcion</p>
                        </div>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">An item</li>
                            <li class="list-group-item">A second item</li>
                            <li class="list-group-item">A third item</li>
                        </ul>

                        <div class="card-body">
                            <a class="btn btn-primary" href="@proyectos.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div>
                }
            }

        }
    </div>
</div>