@model IEnumerable<DTO>

<div class="row mb-5">
    <div class="col-12 text-center">
        <h1 class="titulo">Mis Proyectos Recientes</h1>
        <p class="text-muted fs-5">Algunos de los trabajos que he desarrollado</p>
    </div>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @{
            if(Model is not null)
            {
                foreach (var proyecto in Model)
                {
                    <div class="col">
                        <div class="card h-100 project-card">
                            <div class="card-img-wrapper">
                                <img src="~/imagenes/PHP-logo.png" class="card-img-top" alt="@proyecto.Titulo">
                                <div class="card-img-overlay">
                                    <div class="project-overlay">
                                        <a href="@proyecto.Link" target="_blank" rel="noopener noreferrer" class="btn btn-light btn-sm">
                                            <i class="bi bi-eye me-1"></i>Ver Proyecto
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@proyecto.Titulo</h5>
                                <p class="card-text flex-grow-1">@proyecto.Descripcion</p>
                                
                                <div class="project-tech-stack mb-3">
                                    <span class="badge bg-primary me-1">PHP</span>
                                    <span class="badge bg-secondary me-1">MySQL</span>
                                    <span class="badge bg-info me-1">Bootstrap</span>
                                </div>

                                <div class="project-features mb-3">
                                    <h6 class="text-muted mb-2">Características:</h6>
                                    <ul class="list-unstyled small">
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Diseño responsivo</li>
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Base de datos optimizada</li>
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Interfaz intuitiva</li>
                                    </ul>
                                </div>

                                <div class="mt-auto">
                                    <a class="btn btn-primary w-100" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">
                                        <i class="bi bi-box-arrow-up-right me-2"></i>Visitar Proyecto
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Proyectos de ejemplo cuando no hay datos -->
                <div class="col">
                    <div class="card h-100 project-card">
                        <div class="card-img-wrapper">
                            <img src="~/imagenes/net-core.png" class="card-img-top" alt="Sistema de Gestión">
                            <div class="card-img-overlay">
                                <div class="project-overlay">
                                    <a href="#" class="btn btn-light btn-sm">
                                        <i class="bi bi-eye me-1"></i>Ver Proyecto
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Sistema de Gestión Empresarial</h5>
                            <p class="card-text flex-grow-1">Sistema completo para la gestión de inventarios, ventas y reportes empresariales.</p>
                            
                            <div class="project-tech-stack mb-3">
                                <span class="badge bg-primary me-1">ASP.NET Core</span>
                                <span class="badge bg-secondary me-1">SQL Server</span>
                                <span class="badge bg-info me-1">Bootstrap</span>
                            </div>

                            <div class="project-features mb-3">
                                <h6 class="text-muted mb-2">Características:</h6>
                                <ul class="list-unstyled small">
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>CRUD completo</li>
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Reportes en tiempo real</li>
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Autenticación segura</li>
                                </ul>
                            </div>

                            <div class="mt-auto">
                                <a class="btn btn-primary w-100" href="#">
                                    <i class="bi bi-box-arrow-up-right me-2"></i>Visitar Proyecto
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 project-card">
                        <div class="card-img-wrapper">
                            <img src="~/imagenes/python.png" class="card-img-top" alt="Análisis de Datos">
                            <div class="card-img-overlay">
                                <div class="project-overlay">
                                    <a href="#" class="btn btn-light btn-sm">
                                        <i class="bi bi-eye me-1"></i>Ver Proyecto
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Análisis de Datos con Python</h5>
                            <p class="card-text flex-grow-1">Herramienta de análisis y visualización de datos para insights empresariales.</p>
                            
                            <div class="project-tech-stack mb-3">
                                <span class="badge bg-primary me-1">Python</span>
                                <span class="badge bg-secondary me-1">Pandas</span>
                                <span class="badge bg-info me-1">Matplotlib</span>
                            </div>

                            <div class="project-features mb-3">
                                <h6 class="text-muted mb-2">Características:</h6>
                                <ul class="list-unstyled small">
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Procesamiento de datos</li>
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Visualizaciones interactivas</li>
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Exportación de reportes</li>
                                </ul>
                            </div>

                            <div class="mt-auto">
                                <a class="btn btn-primary w-100" href="#">
                                    <i class="bi bi-box-arrow-up-right me-2"></i>Visitar Proyecto
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 project-card">
                        <div class="card-img-wrapper">
                            <img src="~/imagenes/html5.png" class="card-img-top" alt="Portafolio Web">
                            <div class="card-img-overlay">
                                <div class="project-overlay">
                                    <a href="#" class="btn btn-light btn-sm">
                                        <i class="bi bi-eye me-1"></i>Ver Proyecto
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Portafolio Web Responsive</h5>
                            <p class="card-text flex-grow-1">Sitio web personal moderno y responsive para mostrar proyectos y habilidades.</p>
                            
                            <div class="project-tech-stack mb-3">
                                <span class="badge bg-primary me-1">HTML5</span>
                                <span class="badge bg-secondary me-1">CSS3</span>
                                <span class="badge bg-info me-1">JavaScript</span>
                            </div>

                            <div class="project-features mb-3">
                                <h6 class="text-muted mb-2">Características:</h6>
                                <ul class="list-unstyled small">
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Diseño moderno</li>
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Totalmente responsive</li>
                                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Animaciones suaves</li>
                                </ul>
                            </div>

                            <div class="mt-auto">
                                <a class="btn btn-primary w-100" href="#">
                                    <i class="bi bi-box-arrow-up-right me-2"></i>Visitar Proyecto
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
